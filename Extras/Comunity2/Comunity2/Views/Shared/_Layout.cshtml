<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Community</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style2.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <button class="toggle-btn" onclick="toggleSidebar()" id="sidebarToggleBtn">
        <i class="bi bi-list"></i>
    </button>
    <aside class="sidebar" id="sidebar">
        <h4 class="text-center py-3 border-bottom">Comunity</h4>

        <a asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door-fill"></i> Home
        </a>
        <a asp-controller="Home" asp-action="Privacy">
            <i class="bi bi-shield-lock-fill"></i> Privacy
        </a>
        
        <partial name="_LoginPartial" />
    </aside>
    <main class="content">
        @RenderBody()
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
